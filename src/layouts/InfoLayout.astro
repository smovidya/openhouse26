---
import Base from "./Base.astro";
import "@src/styles/global.css";
import "@src/styles/prose.css";
import { project } from "@src/data/constants";

const { frontmatter } = Astro.props;
---

<Base title={frontmatter.title} description={frontmatter.description}>
  <header class="prose mx-auto mt-5 flex items-center px-5 text-xl font-bold">
    <img src={project.logo} alt="Logo" class="mr-3 mb-1 inline h-10" />
    {project.name}
  </header>
  <article class="prose mx-auto max-w-3xl p-5 px-4 py-8">
    <slot />
  </article>
</Base>
