---
import Base from "./Base.astro";
import "@src/styles/global.css";
import "@src/styles/prose.css";
import { project } from "@src/data/constants";

const { frontmatter } = Astro.props;
---

<Base title={frontmatter.title} description={frontmatter.description}>
  <header class="prose font-bold text-xl px-5 mt-5 mx-auto flex items-center">
    <img src={project.logo} alt="Logo" class="inline h-10 mr-3 mb-1" />
    {project.name}
  </header>
  <article class="prose p-5 max-w-3xl mx-auto px-4 py-8">
    <slot />
  </article>
</Base>
